<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapter.AdminAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warna_kedua"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/untitled_12" />

            <TextView
                android:id="@+id/tv_admin_nama_prestasi"
                android:layout_width="222dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/warna_utama"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ib_approve"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/lingkaran"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_admin_nama_prestasi"
                app:srcCompat="@drawable/ic_baseline_check_24" />

            <ImageButton
                android:id="@+id/ib_decline"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/lingkaran"
                app:layout_constraintStart_toEndOf="@+id/ib_approve"
                app:layout_constraintTop_toBottomOf="@+id/tv_admin_nama_prestasi"
                app:srcCompat="@drawable/ic_baseline_close_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>